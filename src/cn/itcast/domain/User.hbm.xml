<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
>

<hibernate-mapping>
	<!-- 登陆表 -->
	<class name="cn.itcast.domain.User" table="b_user">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="username"></property>
		<property name="password"></property>
		<property name="sex"></property>
		<property name="age"></property>
		<property name="q"></property>
		<property name="money"></property>

	</class>
	<!-- 注冊表 -->
	<class name="cn.itcast.domain.Usert" table="t_user">
		<id name="id">
        <generator class="native"></generator>
		</id>
		<property name="tname"></property>
		<property name="sex"></property>
		<property name="age"></property>
		<property name="money"></property>
	</class>
	
    <!-- 留言表 -->
	<class name="cn.itcast.domain.Message" table="m_user">
		<id name="id">

		</id>
		<property name="userName"></property>
		<property name="liuYan"></property>
		<property name="dataTime"></property>
		<property name="currentTower"></property>
		<property name="allTower"></property>
	</class>
</hibernate-mapping>